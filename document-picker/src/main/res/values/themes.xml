<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="Theme.Lollipop"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Lollipop</item>
        <item name="android:textColorPrimary">@color/native.lollipop.text.normal</item>
        <item name="android:textColorHighlight">@drawable/native_lollipop_text</item>
        <item name="android:textColorHighlightInverse">@color/native.lollipop.text.selected</item>
        <item name="android:activatedBackgroundIndicator">@drawable/native_lollipop_background</item>
        <item name="android:actionDropDownStyle">@style/AppTheme.actionBarDropDown</item>
        <item name="android:spinnerDropDownItemStyle">@style/DropDownList</item>
        <item name="drawerArrowStyle">@style/ActionBar.Lollipop.DrawerArrowStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Lollipop" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:layout_height">@dimen/actionbar.height</item>
        <item name="android:background">@color/native.lollipop.actionbar.background</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>